@import '../../styles/colors'
.userDetails
  position: relative
  justify-content: flex-start;
  align-items: flex-start;
  flex-direction: column;
  width: 100%;
  height: 100;
  max-height: 100%;
  margin: 0 calc(35/1300*100%);
  padding-top: 20px;
  &__title
    height: 40px;
    font-size: 28px;
    line-height: 42px;
    margin: 0;
    margin-bottom: 20px;
    text-align: center;

  &__avatarBlock
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20px;

  &__fileUpload
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);

  &__avatarWrapper
    position: relative;

  &__avatar
    margin-left: 15px;
    margin-right: 10px;
    border: 2px solid elements-background;
    background-size: 40px 40px;

  &__link
    position: absolute;
    left: 21%;
    top: 50%;
    font-weight: bold;
    font-size: 10px;
    transform: translateY(-50%);
    &--hidden
      display: none;

  &__name
    height: 30px;
    &--disabled
      border: none;
      background: inherit;

  &__btnBlock
    display: flex;
    justify-content: center;

  &__modal
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    position: absolute;
    top: 25%;
    left: 50%;
    width: 300px;
    height: 200px;
    transform: translate(-50%, -50%);
    border: 1px solid elements-background;
    box-shadow: 1px 1px 1px 0 elements-background;
    border-radius: 10px;
    &--hidden
      display: none;

  &__label
    margin-bottom: 10px;

  &__changeUrl
    width: 220px;
    margin-bottom: 10px;
